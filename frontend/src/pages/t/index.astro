---
import AdBanner from '@/components/banner/AdBanner.astro';
import { getAllUniqueTools } from '@/config/tools';
import BaseLayout from '@/layouts/BaseLayout.astro';

// Simple homepage for the devtools
---

<BaseLayout
  name="Tools"
  path="/freedevtools/t/"
  title="Free Tools - 50+ Dev Tools Online | No Registration Required"
  description="Collection of free, open-source developer tools including Base64 converter, JSON prettifier, and more. Boost your productivity with our online utilities."
  canonical="https://hexmos.com/freedevtools/t/"
  showHeader={true}
  totalItems={getAllUniqueTools().length}
  keywords={[
    'developer tools',
    'online tools',
    'free tools',
    'productivity',
    'utilities',
    'no registration',
  ]}
  features={[
    'No registration',
    'Free to use',
    'Online tools',
    'Developer utilities',
    'Productivity boost',
  ]}
  toolCategory="Developer Tools"
>
  <div id="tools-page" class="max-w-6xl mx-auto px-2 md:px-6">
    <h1 class="hidden">
      Free Tools - 50+ Dev Tools Online | No Registration Required
    </h1>
    <main>
      <div class="mb-16 mt-[74px]">
        <AdBanner />
      </div>
      <div
        class="grid grid-cols-1 md:grid-cols-2 gap-2 md:gap-4 lg:gap-8 mb-16"
      >
        {
          getAllUniqueTools().map((tool) => (
            <a
              href={tool.path}
              class="block p-4 md:p-4 lg:p-8  bg-white dark:bg-slate-900 border border-slate-200 dark:border-slate-900 rounded-xl text-inherit no-underline transition-all duration-300 ease-in-out shadow-sm hover:-translate-y-1 hover:shadow-xl hover:border-neon dark:hover:border-neon-light"
            >
              <h3 class="m-0 mb-2 md:mb-4 text-black dark:text-neon-light">
                {tool.name}
              </h3>
              <p class="m-0 text-slate-800 dark:text-slate-400">
                {tool.description}
              </p>
            </a>
          ))
        }
      </div>
    </main>
  </div>
</BaseLayout>
