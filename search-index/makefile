.PHONY: build run clean test

# Build the Go binary
build:
	go build -o search-index .

# Run the search index generator
run:
	go run .

gen-tools:
	go run . category=tools

gen-tldr:
	go run . category=tldr

gen-emojis:
	go run . category=emojis

gen-svg-icons:
	go run . category=svg_icons

gen-png-icons:
	go run . category=png_icons

gen-cheatsheets:
	go run . category=cheatsheets

gen-mcp:
	go run . category=mcp

gen-all:
	go run .

# Stem processing
stem:
	go run . stem=output/emojis.json

sync-search-index:
	@echo "ðŸ”„ Starting search index sync process..."
	@echo "ðŸ“Š Step 1: Generating search index files..."
	./search-index
	@echo "ðŸ“¤ Step 2: Transferring files to remote server..."
	./transfer-index-files.sh
	@echo "âœ… Search index sync completed!"
