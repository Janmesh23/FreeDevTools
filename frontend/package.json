{
  "name": "freedevtools-frontend",
  "type": "module",
  "version": "0.0.1",
  "description": "A collection of free developer tools including Base64 converter, JSON prettifier, and more.",
  "engines": {
    "node": ">=22.17.0"
  },
  "scripts": {
    "prepare": "husky || true",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,astro,json,css,md}\" ",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,astro,json,css,md}\" ",
    "check": "npm run format:check && npm run lint",
    "format:list": "prettier --list-different \"**/*.{js,jsx,ts,tsx,astro,json,css,md}\" ",
    "dev": "node --max-old-space-size=16384 ./node_modules/astro/astro.js dev",
    "start": "astro dev",
    "build": "NODE_OPTIONS='--max-old-space-size=16384' UV_THREADPOOL_SIZE=16 astro build",
    "build:mcp": "node scripts/builds/mcp.js",
    "build:tldr": "node scripts/builds/tldr.js",
    "preview": "astro preview",
    "astro": "astro",
    "banner:generate": "node scripts/tool-banners/create-tool-banner.cjs generate",
    "pagespeed": "node scripts/pageSpeed.cjs",
    "pagespeed:all": "node scripts/pageSpeed.cjs --all",
    "pagespeed:minimal": "node scripts/pageSpeed.cjs --minimal",
    "pagespeed:all:minimal": "node scripts/pageSpeed.cjs --all --minimal"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.5.1",
    "@astrojs/starlight": "^0.35.2",
    "@astrojs/tailwind": "^6.0.2",
    "@huggingface/transformers": "^3.7.2",
    "@oneidentity/zstd-js": "^1.0.3",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@types/glob": "^8.1.0",
    "@types/jsoneditor": "^9.9.6",
    "@types/react": "^19.1.10",
    "@types/react-color": "^3.0.13",
    "@types/react-dom": "^19.1.7",
    "@types/showdown": "^2.0.6",
    "ace-builds": "^1.43.2",
    "astro": "^5.6.1",
    "astro-tooltips": "^0.6.2",
    "class-variance-authority": "^0.7.1",
    "cronstrue": "^3.3.0",
    "date-fns": "^4.1.0",
    "glob": "^11.0.3",
    "js-tiktoken": "^1.0.21",
    "jsoneditor": "^10.3.0",
    "jsonrepair": "^3.13.0",
    "konva": "^10.0.2",
    "lucide-react": "^0.541.0",
    "marked": "^16.3.0",
    "purgecss": "^7.0.2",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-color": "^2.19.3",
    "react-day-picker": "^9.9.0",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-github-btn": "^1.4.0",
    "react-konva": "^19.0.10",
    "react-toastify": "^11.0.5",
    "sharp": "^0.34.2",
    "showdown": "^2.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.1",
    "astro-compressor": "^1.2.0",
    "axios": "^1.12.2",
    "canvas": "^3.2.0",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.2.5",
    "p-limit": "^3.1.0",
    "pdfkit": "^0.17.2",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "tailwindcss": "^3.4.17",
    "vitest": "^3.2.4",
    "xml2js": "^0.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
